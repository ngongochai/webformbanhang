@model haymuasi.Models.User
 @{
    ViewBag.Title = "LoginUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@Html.Action("MenuHeader", "Home")
@*@Html.Action("MainMenu", "MainMenu")*@
@using (@Html.BeginForm())
    {
<div class="container">
    <h2 style="font-family:webfont;">ĐĂNG NHẬP</h2>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6" style="font-family:webfont;">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @class = "error" })
        </div>
    </div>
        <div class="row" style="margin-bottom:10px;">
            <div class="col-md-2" style="font-family:webfont;">
                <span>Tên Đăng Nhập</span>
            </div>
            <div class="col-md-4" style="font-family:webfont;">
                @Html.TextBoxFor(m => m.UserName, null, new { @class = "form-control" })
            </div>
        </div>
    <div class="row" style="margin-bottom:10px;">
        <div class="col-md-2" style="font-family:webfont;">
            <span>Nhập Mật Khẩu</span>
        </div>
        <div class="col-md-6" style="margin-bottom:10px;font-family:webfont;">
            @Html.TextBoxFor(m => m.Password, null, new { @class = "form-control", @type = "Password" })
        </div>
    </div>
    <div class="row" style="margin-bottom:10px;">
        <div class="col-md-3"></div>
        <button type="submit" class="btn btn-primary" style="font-family:webfont;">ĐĂNG NHẬP</button>
    </div>

</div>
    }

